<!-- include header -->
<%- include('../../template/_header') %>
<!-- /include header -->
    <!-- Header -->
    <header id="header">
        <nav>
            <div class="container">
                <div class="text-center">
                    <a href="/" class="nav-brand text-dark">User Management System - Welcome!</a>
                </div>
            </div>
        </nav>
    </header>
    <!-- /Header -->

    <!-- Main Site -->
    <main id="site-main">
        <div class="container">
            <%- include('../menu/menu') %>
            
            <div class="box-nav d-flex justify-between" style="float:left;margin:0 0 25px 0;">
                <a href="/add-user" class="border-shadow" style="margin:0 10px 0 0;">
                    <span class="text-gradient">New User <i class="far fa-newspaper"></i></span>
                </a>
            </div>

            <!-- form handling -->
            <form action="/" method="POST">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>@Email</th>
                            <th>Gender</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%- include('show') %>
                    </tbody>
                </table>
            </form>
        </div>
    </main>
<!-- /Main Site -->


